<% if flash.any? %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1000">
    <% flash.each do |key, messages| %>
      <% if key == "success" %>
        <%= render "shared/toast_success", msg: messages %>
      <% elsif key == "error" %>
        <% if messages.is_a?(Array) %>
          <% messages.each do |message| %>
            <%= render "shared/toast_error", msg: message %>
          <% end %>
        <% else %>
          <%= render "shared/toast_error", msg: messages %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
