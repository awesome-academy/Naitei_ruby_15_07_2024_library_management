<div class="modal fade" id="modalLogout" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <%= t "views.users.show.modal_title" %>
          <span class="text-danger"><i class="fa-solid fa-triangle-exclamation"></i></span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= t "views.users.show.modal_logout_body" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <%= t "views.users.show.btn_close" %>
        </button>
        <%= link_to t("views.users.btn_logout"), destroy_user_session_path , 
            class: "btn btn-danger" , data: {turbo_method: :delete} %>
      </div>
    </div>
  </div>
</div>
