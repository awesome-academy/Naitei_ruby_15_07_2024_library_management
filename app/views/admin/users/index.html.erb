<% provide :title, t(".title") %>
<%= render "admin/shared/breadcrumb" %>
<div class="admin-users-page">
  <h1 class="page-title"><%= t ".title" %> (<%= @pagy.count %>)</h1>

  <%= render "admin/shared/search_form", search_attribute: :name_cont %>
  <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#advancedSearchModal">
    <i class="fa-solid fa-sliders"></i>
  </button>

  <% if @users.any? %>
    <ul class="users list-group">
      <%= render partial: "user", collection: @users %>
    </ul>

    <div class="mt-3">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  <% else %>
    <%= render "admin/shared/not_found" %>
  <% end %>
</div>

<%= render "admin/users/advanced_search_modal" %>
