<%= form_for [:admin, @author], html: { multipart: true } do |f| %>
  <%= render "admin/shared/error_messages", object: @author %>

  <div class="form-group">
    <%= f.label :name, t("admin.authors.show.name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :intro, t("admin.authors.show.intro") %>
    <%= f.text_area :intro, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio, t("admin.authors.show.bio") %>
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dob, t("admin.authors.show.dob") %>
    <%= f.date_field :dob, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dod, t("admin.authors.show.dod") %>
    <%= f.date_field :dod, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :thumb_img, t("admin.authors.show.thumb") %>
    <%= f.file_field :thumb_img, class: "form-control" %>
  </div>

  <div class="form-group text-end">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
