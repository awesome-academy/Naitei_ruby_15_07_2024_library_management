<% provide :title, t(".title") %>
<%= render "admin/shared/breadcrumb" %>
<div class="admin-borrow-requests-page">
  <div class="header d-flex align-items-center justify-content-between">
    <h1 class="page-title"><%= t ".title" %> (<%= @pagy.count %>)</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th><%= t "admin.borrow_books.show.user" %></th>
              <th><%= t "admin.borrow_books.show.checkout_card" %></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @borrow_books.group_by(&:borrow_card).each_with_index do |(borrow_card, borrow_books), card_index| %>
              <%= render partial: "card_row", locals: { borrow_card: borrow_card, action_type: :borrow, card_index: card_index + @pagy.offset } %>
              <% borrow_books.each do |borrow_book| %>
                <%= render partial: "book_row", locals: { borrow_book: borrow_book, action_type: :borrow } %>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <div class="mt-3">
          <%== pagy_bootstrap_nav @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>
