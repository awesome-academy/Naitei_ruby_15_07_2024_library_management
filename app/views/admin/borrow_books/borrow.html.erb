<% provide :title, t(".title") %>
<%= render "admin/shared/breadcrumb" %>
<div class="admin-borrow-requests-page">
  <div class="header d-flex align-items-center justify-content-between">
    <h1 class="page-title"><%= t ".title" %> (<%= @pagy.count %>)</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th><%= t "admin.borrow_books.show.user" %></th>
              <th><%= t "admin.borrow_books.show.book" %></th>
              <th><%= t "admin.borrow_books.show.episode" %></th>
              <th class="text-center"><%= t "admin.borrow_books.show.status" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @borrow_books.each_with_index do |borrow_book, index| %>
              <%= render partial: "row", locals: { borrow_book: borrow_book, action_type: "borrow", borrow_book_index: index + @pagy.offset } %>
            <% end %>
          </tbody>
        </table>
        <div class="mt-3">
          <%== pagy_bootstrap_nav @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>
