<% provide :title, t(".title") %>
<%= render "admin/shared/breadcrumb" %>
<div class="admin-borrow-requests-page">
  <div class="header d-flex align-items-center justify-content-between">
    <h1 class="page-title"><%= t ".title" %> (<%= @pagy.count %>)</h1>
  </div>
  <%= render "admin/shared/search_form", search_attribute: :user_name_cont %>
  <% if @borrow_cards.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th><%= t "admin.borrow_books.show.user" %></th>
                <th><%= t "admin.borrow_books.show.checkout_card" %></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "card_row", collection: @borrow_cards, as: :borrow_card, locals: { action_type: :borrow } %>
            </tbody>
          </table>
          <div class="mt-3">
            <%== pagy_bootstrap_nav @pagy %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%= render "admin/shared/not_found" %>
  <% end %>
</div>
