<% provide :title, t(".title") %>
<%= render "admin/shared/breadcrumb" %>
<div class="admin-publishers-page">
  <div class="header d-flex align-items-center justify-content-between">
    <h1 class="page-title"><%= t ".title" %> (<%= @pagy.count %>)</h1>
    <%= render "admin/shared/add_new_button", resource: :episode %>
  </div>

  <%= render "admin/shared/search_form", search_attribute: :name_cont %>
  <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#advancedSearchModal">
    <i class="fa-solid fa-sliders"></i>
  </button>

  <% if @episodes.any? %>
    <ul class="publishers list-group">
      <%= render partial: "episode", collection: @episodes %>
    </ul>

    <div class="mt-3">
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  <% else %>
    <%= render "admin/shared/not_found" %>
  <% end %>
</div>

<%= render "admin/episodes/advanced_search_modal" %>
