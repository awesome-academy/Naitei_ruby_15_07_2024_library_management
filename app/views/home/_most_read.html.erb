<div class="col-lg-2 col-md-6 col-sm-6">
  <div class="item">
    <div class="thumb">
      <%= link_to book_episode_path(ep.book, ep) do %>
        <%= image_tag ep.thumb %>
      <% end %>
    </div>
    <div class="down-content">
      <span class="category truncate-text"><%= ep.book.name %></span>
      <h4 class="truncate-text"><%= ep.name %></h4>
      <%= link_to "Explore", book_episode_path(ep.book, ep) %>
    </div>
  </div>
</div>
